<UserControl x:Class="RewardYourTasks.PercentProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    VerticalAlignment="Center">
    
    <Grid x:Name="LayoutRoot" MinHeight="40">
        <Rectangle Name="EmptyBar" Fill="{StaticResource PhoneBackgroundBrush}" Stroke="{StaticResource PhoneForegroundBrush}" StrokeThickness="3" />
        <Rectangle Name="Progress" Fill="{StaticResource PhoneForegroundBrush}" Stroke="{StaticResource PhoneForegroundBrush}" StrokeThickness="2" HorizontalAlignment="Left" />
        <Border Background="Black" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="PercentTextBlock" VerticalAlignment="Stretch" HorizontalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource PhoneForegroundBrush}" Margin="2,2,2,0" Style="{StaticResource PhoneTextSmallStyle}" />
        </Border>
    </Grid>
    
</UserControl>
